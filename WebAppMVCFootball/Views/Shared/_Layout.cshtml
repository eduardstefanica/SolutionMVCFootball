<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebAppMVCFootball</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebAppMVCFootball.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark box-shadow mb-3">
            <div class="container-fluid">
                <div class="d-flex align-items-center">
                    
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index" style="padding: 0;">
                        <img src="~/Logo/fotoCV.png" alt="Logo" class="rounded-circle" style="width: 40px; height: 40px;">
                        eduardstefanica
                    </a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                </div>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                    
                    <ul class="navbar-nav">
                        <li class="nav-item ml-auto">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer bg-dark text-light">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-12 text-center">
                    <div style="display: flex; align-items: center;">
                        <a href="https://www.facebook.com/profile.php?id=100057346836563" target='_blank'><img src="~/Logo/Facebook_Logo.png" height="50px" width="50px" style="margin-right: 30px;"></a>
                        <a href="https://instagram.com/eduardstefanica" target="_blank"><img src="~/Logo/Instagram_Logo.png" height="50px" width="50px" style="margin-right: 30px;"></a>
                        <a href="https://www.linkedin.com/in/eduard-stefanica-5a516a240/" target="_blank"><img src="~/Logo/Linkedin_Logo.png" height="50px" width="50px" style="margin-right: 30px;"></a>
                        <a href="https://github.com/eduardstefanica" target="_blank"><img src="~/Logo/Github_Logo.png" height="50px" width="50px" style="margin-right: 30px;"></a>
                    </div>
                </div>
            </div>
        </div>
    </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
